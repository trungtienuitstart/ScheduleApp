<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_all_note"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="uitstart.uit.schedule.activity.AllNoteActivity"
    android:orientation="vertical"
    android:weightSum="10"
    android:background="@drawable/background">

    <LinearLayout
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:weightSum="1"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:background="@drawable/border_trans">
        <ImageView
            android:id="@+id/ic_activity"
            android:layout_gravity="center"
            android:layout_width="0dp"
            android:layout_weight="0.2"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_list_activity">

        </ImageView>

        <TextView
            android:id="@+id/title_activity"
            android:paddingLeft="10dp"
            android:layout_width="0dp"
            android:layout_weight="0.6"
            android:layout_height="match_parent"
            android:textColor="#ffea00"
            android:text="Tất cả ghi chú"
            android:layout_gravity="center"
            android:gravity="center_vertical"/>

        <ImageView
            android:id="@+id/ic_activity_delete"
            android:layout_gravity="center"
            android:layout_width="0dp"
            android:layout_weight="0.2"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_activity_trash"
            android:visibility="gone">

        </ImageView>


    </LinearLayout>

    <ListView
        android:padding="5dp"
        android:id="@+id/lvAllNote"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="9"
        android:background="@drawable/border_trans"
        android:layout_margin="5dp">
    </ListView>


</LinearLayout>
